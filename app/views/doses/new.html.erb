<div class="form">
  <div class="container">
    <div class="row">
      <div class="col-xs-8 col-xs-offset-2">
      <h1 class="text-center">Add an ingredient to this cocktail</h1>
        <%= simple_form_for [@cocktail, @dose] do |f| %>
          <%= f.input :description %>
          <%= f.input :ingredient_id, collection: Ingredient.all %>
          <%= f.button :submit %>
        <% end %>
      </div>
    </div>
  </div>
</div>
